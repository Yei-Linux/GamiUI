{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib",

    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "context/*": ["./src/context/*", "./lib/context/*"],
      "core/*": ["./src/core/*", "./lib/core/*"],
      "designSystem/*": ["./src/designSystem/*", "./lib/designSystem/*"],
      "hooks/*": ["./src/hooks/*", "./lib/hooks/*"],
      "providers/*": ["./src/providers/*", "./lib/providers/*"],
      "styles/*": ["./src/styles/*", "./lib/styles/*"]
    },

    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],

    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitAny": true,

    "isolatedModules": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "plugins": [{ "transform": "typescript-transform-macros" }],
    "esModuleInterop": true
  },
  "include": ["src/**/*", "typings/*.d.ts"]
}
