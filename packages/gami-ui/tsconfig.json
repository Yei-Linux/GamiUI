{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib",

    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "context/*": [
        "./src/context/*",
        "./lib/cjs/context/*",
        "./lib/esm/context/*",
        "./lib/types/context/*"
      ],
      "core/*": [
        "./src/core/*",
        "./lib/cjs/core/*",
        "./lib/esm/core/*",
        "./lib/types/core/*"
      ],
      "designSystem/*": [
        "./src/designSystem/*",
        "./lib/cjs/designSystem/*",
        "./lib/esm/designSystem/*",
        "./lib/types/designSystem/*"
      ],
      "hooks/*": [
        "./src/hooks/*",
        "./lib/cjs/hooks/*",
        "./lib/esm/hooks/*",
        "./lib/types/hooks/*"
      ],
      "providers/*": [
        "./src/providers/*",
        "./lib/cjs/providers/*",
        "./lib/esm/providers/*",
        "./lib/types/providers/*"
      ],
      "styles/*": [
        "./src/styles/*",
        "./lib/cjs/styles/*",
        "./lib/esm/styles/*",
        "./lib/types/styles/*"
      ],
      "hocs/*": [
        "./src/hocs/*",
        "./lib/cjs/hocs/*",
        "./lib/esm/hocs/*",
        "./lib/types/hocs/*"
      ]
    },
    "target": "es2015",
    "module": "es2015",

    "moduleResolution": "Node",

    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],

    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitAny": true,

    "isolatedModules": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "plugins": [{ "transform": "typescript-transform-macros" }],
    "esModuleInterop": true
  },
  "include": ["src/**/*", "typings/*.d.ts"]
}
